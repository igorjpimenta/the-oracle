# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# API Configuration
# Port number for the API server (default: 4000)
PORT=4000

# Enable debug mode for development (default: False)
DEBUG=false

# =============================================================================
# DATABASE SETTINGS (PostgreSQL)
# =============================================================================

# Database connection details (all required)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Enable SSL mode for database connections (default: False)
# Set to true for production environments
SSL_MODE=false

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis connection details (all required)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Enable SSL for Redis connections (required)
# Set to true for production environments with SSL-enabled Redis
REDIS_SSL=false

# =============================================================================
# AI/ML SETTINGS
# =============================================================================

# OpenAI base URL for Instructor/AI functionality (optional)
# If not provided, the default OpenAI base URL will be used
OPENAI_BASE_URL=

# OpenAI API key for Instructor/AI functionality (required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Copy this file to .env and fill in your actual values
# 2. You can also create .env.local to override values from .env
# 3. Never commit your actual .env files to version control
# 4. Required fields (marked as required above) must be provided
# 5. Optional fields have default values and can be omitted
#
# Database URLs are automatically generated from the DB_* variables:
# - Sync: postgresql+psycopg2://user:password@host:port/database
# - Async: postgresql+asyncpg://user:password@host:port/database
#
# Redis URL is automatically generated from REDIS_* variables:
# - Non-SSL: redis://password@host:port
# - SSL: rediss://password@host:port
